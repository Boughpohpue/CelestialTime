<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
	<ImplicitUsings>enable</ImplicitUsings>
	<Nullable>enable</Nullable>
	
	<!-- NuGet metadata -->
	<PackageId>Infertus.CelestialTime</PackageId>
	<Version>1.0.0</Version>
	<Authors>Lukasz Kulik</Authors>
	<Company>Infertus</Company>
	<Description>A lightweight C# astronomy library that extends DateTime with intuitive solar and lunar calculations.</Description>
	<PackageLicenseExpression>GPL-3.0-or-later</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/Boughpohpue/CelestialTime</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="GeoTimeZone" Version="6.1.0" />
    <PackageReference Include="Infertus.Geo.Primitives" Version="1.0.0" />
    <PackageReference Include="TimeZoneConverter" Version="7.2.0" />
  </ItemGroup>

</Project>
